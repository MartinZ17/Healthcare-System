@model HealthcareSystem.ViewModel.Hospitals.IndexVM
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Patient Listing</h2>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Illnes</th>
                        <th>Doctor</th>
                        <th>Hospital</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Patients)
                {
                    <tbody>
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Age</td>
                            <td>@item.Gender</td>
                            <td>@item.Illnes</td>
                            <td>@item.Doctor.FirstName  @item.Doctor.LastName</td>
                            <td>@item.Hospital.Name</td>
                        </tr>
                    </tbody>
                }
            </table>
            <div class="form-group">
                <a href="/Hospitals/Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>