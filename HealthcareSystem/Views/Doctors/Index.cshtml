@model List<HealthcareSystem.Models.Doctor>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Doctor Listings</h2>
            <a class="btn btn-primary" href="/Doctors/Add">Add new doctor</a>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Department</th>
                        <th>Hospital</th>
                    </tr>
                </thead>
                @foreach(var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Age</td>
                            <td>@item.Gender</td>
                            <td>@item.Department</td>
                            <td>@item.Hospital.Name</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="/Doctors/Edit?id=@item.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" href="/Doctors/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    </tbody>
                }
                
            </table>
        </div>
    </div>
</div>